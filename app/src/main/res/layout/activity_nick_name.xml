<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0f0">
    <RelativeLayout
        android:id="@+id/fir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="25dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sec"
        android:layout_below="@+id/fir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/text_nick"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
        <EditText
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_nick"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_border1"
            android:textColor="@android:color/black"
            android:onClick="buttonClicked"
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:hint="不超过8个汉字或16个字母"
            android:textColorHint="@android:color/darker_gray"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/thi"
        android:layout_below="@+id/sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30天只能修改一次。"
        android:textColor="#808080"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/thi"
        android:id="@+id/bt_finish"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style_normal"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:text="完成"
        android:textSize="20dp"/>
</RelativeLayout>