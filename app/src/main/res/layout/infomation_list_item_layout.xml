<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.example.homeworkcorrect.chat.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/my1"
        android:layout_marginLeft="10dp"/>
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_nickname"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清风制约"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_below="@+id/user_nickname"
            android:layout_gravity="center_vertical"
            android:id="@+id/send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好，新朋友"/>
        <TextView
            android:layout_toRightOf="@+id/user_nickname"
            android:id="@+id/send_time"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-11-30 5:14"/>
    </RelativeLayout>
</LinearLayout>