<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:id="@+id/sec"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/color_white">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/money_return"
            android:onClick="onClicked"
            android:layout_gravity="center"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/back12"/>
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值拍拍币"
            android:textSize="20dp"
            android:textColor="#000000" />
    </RelativeLayout>
    <RelativeLayout
        android:onClick="onClicked"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/work12"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="拍拍币余额： "/>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_user"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"/>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍拍币"
                android:textColor="@android:color/holo_orange_dark"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/change_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/www222"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍拍币数量"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>
        <LinearLayout
            android:id="@+id/wwww333"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/www222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/m1"
                android:layout_width="110dp"
                android:onClick="onClicked"
                android:layout_height="60dp"
                android:background="@drawable/edit_border2"
                android:layout_gravity="center"
                android:text="1 拍拍币">
            </Button>
            <Button
                android:id="@+id/m2"
                android:layout_marginLeft="15dp"
                android:layout_width="110dp"
                android:onClick="onClicked"
                android:layout_height="60dp"
                android:background="@drawable/edit_border2"
                android:text="10 拍拍币">
            </Button>
            <Button
                android:id="@+id/m3"
                android:layout_width="110dp"
                android:onClick="onClicked"
                android:layout_marginLeft="15dp"
                android:layout_height="60dp"
                android:background="@drawable/edit_border2"
                android:text="50 拍拍币">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/wwww333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/m4"
                android:layout_width="110dp"
                android:onClick="onClicked"
                android:layout_height="60dp"
                android:background="@drawable/edit_border2"
                android:text="100 拍拍币">
            </Button>
            <Button
                android:id="@+id/m5"
                android:onClick="onClicked"
                android:layout_width="110dp"
                android:layout_marginLeft="15dp"
                android:layout_height="60dp"
                android:background="@drawable/edit_border2"
                android:text="500 拍拍币">
            </Button>
            <Button
                android:id="@+id/m6"
                android:layout_width="110dp"
                android:onClick="onClicked"
                android:layout_marginLeft="15dp"
                android:layout_height="60dp"
                android:background="@drawable/edit_border2"
                android:text="1000 拍拍币">
            </Button>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/wwww3333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/wwww3333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/zf1"
                android:onClick="onClicked"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/edit_border2"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:gravity="center">
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wxzf"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="微信"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/zf2"
                android:onClick="onClicked"
                android:layout_marginLeft="15dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/edit_border2"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:gravity="center">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/zfb"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/immediate_pay"
            android:onClick="onClicked"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="立即支付"
            android:textColor="#ffffff"
            android:background="@drawable/money_btn"/>
    </RelativeLayout>
</LinearLayout>
