<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f0f0f0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="15dp"
                android:paddingLeft="35dp"
                android:background="@drawable/edit_border"
                android:id="@+id/search_content"
                android:layout_width="330dp"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_marginLeft="23.5dp"
                android:layout_marginTop="6dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/search"/>
            <Button
                android:layout_marginLeft="286dp"
                android:background="@drawable/search_button_background"
                android:layout_width="60dp"
                android:text="搜索"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_height="30dp"/>
        </RelativeLayout>
        <com.youth.banner.Banner
            android:layout_marginTop="3dp"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_book_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/book_shop"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="书店" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/teacher"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="家教" />

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/cls"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="培训课" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/gift"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="福利" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="left"
            android:text="优选书籍"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="25sp" />

        <com.example.homeworkcorrect.ScrollableGridView
            android:id="@+id/gv_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="auto_fit"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="20dp"
            android:padding="3dp"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="left"
            android:text="培训机构推荐"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="25sp" />

        <com.example.homeworkcorrect.ScrollableGridView
            android:id="@+id/gv_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:padding="5dp"
            android:verticalSpacing="20dp"
            xmlns:android="http://schemas.android.com/apk/res/android" />

<!--        <ListView xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--            android:id="@+id/lv_school"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:divider="#fff"-->
<!--            android:background="#fdfdfd"-->
<!--            android:dividerHeight="20dp">-->
<!--        </ListView>-->

    </LinearLayout>
</ScrollView>