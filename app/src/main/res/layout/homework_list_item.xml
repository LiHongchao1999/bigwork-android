<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.example.homeworkcorrect.RoundRectLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_homework"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_below="@id/img_homework"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:src="@drawable/subjecticon"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_homework_type"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="20dp"
                    android:text="数学"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:src="@drawable/timeicon"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_submit_time"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:src="@drawable/stateicon"
                    android:layout_height="18dp"/>
                <TextView android:id="@+id/tv_state"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>

        </LinearLayout>
    </com.example.homeworkcorrect.RoundRectLayout>


</LinearLayout>
