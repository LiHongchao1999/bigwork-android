<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/book_list_style"
    android:padding="3dp"
    android:orientation="vertical">
    <com.example.homeworkcorrect.RoundRectLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_homework"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"/>
    </com.example.homeworkcorrect.RoundRectLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_homework_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="数学"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_submit_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#000000"/>
        <TextView android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>
</LinearLayout>
