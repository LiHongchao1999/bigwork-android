<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f0f0f0"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/back"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="正文"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/more"/>
            </RelativeLayout>
            <LinearLayout
                android:padding="8dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.example.homeworkcorrect.chat.CircleImageView
                        android:id="@+id/detail_img"
                        android:layout_marginTop="3dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/detail_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/holo_orange_dark"/>
                        <TextView
                            android:id="@+id/detail_send_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_send_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </LinearLayout>
                <com.example.homeworkcorrect.ScrollableGridView
                    android:id="@+id/deatil_send_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3" />
            </LinearLayout>
            <RelativeLayout
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/forward"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="转发"/>
                    <TextView
                        android:id="@+id/fre_forward_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_toRightOf="@+id/forward"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="评论"/>
                    <TextView
                        android:id="@+id/fre_comment_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="155dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="赞"/>
                    <TextView
                        android:id="@+id/fre_like_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="150dp"
                android:layout_height="3dp"
                android:background="@drawable/underline_style"/>
            <com.example.homeworkcorrect.MyListView
                android:id="@+id/all_comment"
                android:padding="5dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_comment"
            android:layout_marginLeft="5dp"
            android:hint="写评论..."
            android:background="@drawable/bg_white"
            android:layout_width="280dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btn_submit"
            android:text="发送"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/bg_blue"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>
</RelativeLayout>