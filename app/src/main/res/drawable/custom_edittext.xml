<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="#CCf0f0f0"/>
    <!--设置边距-->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/>
    <!--设置圆角矩形-->
    <corners android:radius="0dp"/>

    <!--设置边框粗细和颜色-->
    <stroke
        android:width="2px"
        android:color="#CCf0f0f0"/>
</shape>